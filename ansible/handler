---
- name: installation of apache2
  hosts: all
  tasks:
    - name: setup of httpd
      apt:
        name: apache2
        state: present
        update_cache: yes
    - name: edit the html file
      copy:
        content: "hello world"
        dest: /var/www/html/index.html     
      notify: restart the service          { down name Must match handler name exactly }
  handlers:
    - name: restart the service
      service:
        name: apache2
        state: restarted





---
- name: installation of tomcat and tomcat10-admin
  hosts: all
  tasks:
    - name: install of tomcat10 and tomcat10-admin
      apt:
        name: "{{item}}"
        state: present
        update_cache: yes
      with_items:
        - tomcat10
        - tomcat10-admin
      notify: restart the tomcat10
  handlers:
    - name: restart the tomcat10
      service:
        name: tomcat10
        state: restarted
    - name: wait for the 30 seconds
      pause:
        seconds: 30
    - name: check the response of  server's
      uri:
        url: "{{item}}"
        status_code: 200
      with_items:
        - http://18.118.255.177
        - http://18.225.255.75

